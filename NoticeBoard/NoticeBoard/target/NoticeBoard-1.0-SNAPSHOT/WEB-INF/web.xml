<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- LoginServlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.mycompany.noticeboard.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <!-- LogoutServlet -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.mycompany.noticeboard.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>

    <!-- AddNoticeServlet -->
    <servlet>
        <servlet-name>AddNoticeServlet</servlet-name>
        <servlet-class>com.mycompany.noticeboard.AddNoticeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddNoticeServlet</servlet-name>
        <url-pattern>/AddNoticeServlet</url-pattern>
    </servlet-mapping>

    <!-- UpdateNoticeServlet -->
    <servlet>
        <servlet-name>UpdateNoticeServlet</servlet-name>
        <servlet-class>com.mycompany.noticeboard.UpdateNoticeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateNoticeServlet</servlet-name>
        <url-pattern>/UpdateNoticeServlet</url-pattern>
    </servlet-mapping>

    <!-- DeleteNoticeServlet -->
    <servlet>
        <servlet-name>DeleteNoticeServlet</servlet-name>
        <servlet-class>com.mycompany.noticeboard.DeleteNoticeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteNoticeServlet</servlet-name>
        <url-pattern>/DeleteNoticeServlet</url-pattern>
    </servlet-mapping>

</web-app>
